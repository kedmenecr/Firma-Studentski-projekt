@*
    Ovo je komentar.
    Svojstvo Layout definira li će se stranica učitati unutar neke masterpage stranice
    @Html.ActionLink() je html helper. Pomoću njega lakše pišemo html kod.
*@

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron">
    <h1>Baza zaposlenika</h1>
</div>

<div class="row">
    <div class="col-md-6">
        <h2>Pretraživanje i pregled</h2>
        <p>Pretraživanje zaposlenika po nazivu, ažuriranje zaposlenika, brisanje zaposlenika.</p>
        <p>@Html.ActionLink("Pregled", "Popis", "Admin", "", new { @class = "btn btn-default btn-lg", role = "button" })</p>
    </div>
    <div class="col-md-6">
        <h2>Unos novog zaposlenika</h2>
        <p>Unos novog zaposelnika u centralnu bazu podataka.</p>
        <p>@Html.ActionLink("Unos", "Azuriraj", "Admin", "", new { @class = "btn btn-default btn-lg", role = "button" })</p>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <h2>Napravi Rolu</h2>
        <p>Stvaranje role koja će omogučiti korisniku razinu pristupa.</p>
        <p>@Html.ActionLink("Izradi Rolu", "CreateRole", "Admin","",new { @class = "btn btn-default btn-lg", role = "button" })</p>
    </div>
    <div class="col-md-6">
        <h2>Dodijeli rolu</h2>
        <p>Dodijeljivanje role korisniku.</p>
        <p>@Html.ActionLink("Dodjeli Rolu", "AssignRole", "Admin", "", new { @class = "btn btn-default btn-lg", role = "button" })</p>
    </div>
    @*<ul>        
        <li>@Html.ActionLink("Izradi Rolu", "CreateRole", "Admin")</li>
        <li>@Html.ActionLink("Dodjeli Rolu", "AssignRole", "Admin")</li>
    </ul>*@
</div>

