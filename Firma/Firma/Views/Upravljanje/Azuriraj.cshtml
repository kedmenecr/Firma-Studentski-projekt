@using Firma.Models.PoslovnaLogika
@model Fraktura

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<br />

@using (Html.BeginForm())
{

    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <table class="table">
            <tr>
                <td>@Html.LabelFor(model => model.id_racun, new { @class = "control-label" })</td>
                <td>@Html.TextBoxFor(model => model.id_racun, new { disabled = true, @class = "form-control" })</td>
            </tr>

            <tr>
                <td>@Html.LabelFor(model => model.ime_artikla, new { @class = "control-label" })</td>
                <td>
                    @Html.DropDownListFor(model => model.ime_artikla,
                   new SelectList(ViewBag.RacunTitle,"Id",""),
                   new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ime_artikla, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td>@Html.LabelFor(model => model.id_proizvod, new { @class = "control-label" })</td>
                <td>
                    @Html.EditorFor(model => model.id_proizvod, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.id_proizvod, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td>@Html.LabelFor(model => model.cijena, new { @class = "control-label" })</td>
                <td>
                    @Html.EditorFor(model => model.cijena, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.cijena, "", new { @class = "text-danger" })
                </td>
            </tr>
           

        </table>
    </div>
    <p>
        @Html.ValidationSummary(true,
    "Spremanje nije uspjelo! Popravite potrebne podatke i pokušajte ponovno", new { @class = "text-danger" })
    </p>

    <p><input type="submit" value="Spremi" class="btn btn-default" /></p>
    @Html.ActionLink("Povratak na početak spremanja", "Popis", new { @class = "btn btn-link" })
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}